{
  "author": "DARIAH-DE, Severin Simmler",
  "name": "dariah-topics-app",
  "productName": "DARIAH Topics",
  "description": "GUI for a Topic Modeling workflow",
  "version": "0.2.0",
  "keywords": [
    "Topic Modeling",
    "LDA",
    "Natural Language Processing"
  ],
  "repository": "https://github.com/DARIAH-DE/Topics",
  "main": "main.js",
  "devDependencies": {
    "electron": "^1.4.3",
    "electron-packager": "^8.1.0"
  },
  "dependencies": {
